---
import type { DropdownOptions } from "@utils/types";
interface Props {
    id: string;
    classes?: string;
    options: DropdownOptions[];
}

const { id, options, classes } = Astro.props;
---
<select id=`dropdownBox-${id}` class=`${classes} cursor-pointer flex h-10 w-[180px] items-center justify-between text-(--foreground) background-(--background) rounded-full border border-(--border) px-4 py-2 transition-colors hover:border-(--input) focus:outline-none focus:ring-2 focus:ring-(--primary)`>
    {options.map((el) => 
        <option class="w-full bg-(--accent) rounded-sm p-1" value={el.value}>{el.name}</option>
    )}
</select>
