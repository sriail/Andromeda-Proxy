---
interface Props {
    placeholder: string;
    id: string;
}
const { placeholder, id } = Astro.props;
---
<input class="h-10 w-full rounded-full border border-(--border) px-4 py-2 text-sm bg-transparent text-(--foreground) placeholder:text-(--muted-foreground) focus:outline-none focus:ring-2 focus:ring-(--primary) transition-all" placeholder={placeholder} id={id} ></input>
